<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/Banner"
            android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="159dp" app:srcCompat="@mipmap/mac_logo_layer"
            android:id="@+id/Logo"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@+id/Banner"
            app:layout_constraintEnd_toEndOf="@+id/Banner"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="90dp"
            android:layout_height="91dp" app:srcCompat="@mipmap/mac_avatar_2_layer"
            android:id="@+id/Avatar"
            android:scaleType="fitCenter" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="@+id/Logo"/>
    <TextView
            android:text="{company_name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Company"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/Avatar" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/Banner"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_picture"
            android:id="@+id/imageView8"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView9"
            app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toTopOf="@+id/imageView9"
    />
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_heart"
            android:id="@+id/imageView9"
            app:layout_constraintStart_toEndOf="@+id/imageView8" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/imageView10" android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" app:layout_constraintTop_toTopOf="@+id/imageView10"
    />
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_shopping_bag"
            android:id="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/Avatar"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.50121653"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_hamb_layer"
            android:id="@+id/imageView11"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView13" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintDimensionRatio="1:1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_chicken_layer"
            android:id="@+id/imageView12"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView14" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView14" app:layout_constraintDimensionRatio="1:1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_cola_layer"
            android:id="@+id/imageView13"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView8"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_ice_cream_layer"
            android:id="@+id/imageView14"
            android:scaleType="centerCrop"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/imageView13"
            app:layout_constraintDimensionRatio="1:1"/>
</android.support.constraint.ConstraintLayout>