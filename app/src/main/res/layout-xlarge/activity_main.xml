<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/Banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/mac_logo_layer"
            android:id="@+id/Logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/Banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@mipmap/avatar_macc_lay"
            android:id="@+id/Avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="{company_name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Company" app:layout_constraintStart_toEndOf="@+id/Avatar"
            android:layout_marginStart="48dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/Logo" android:textSize="20sp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_picture"
            android:id="@+id/iconGallery"
            app:layout_constraintStart_toEndOf="@+id/Company" app:layout_constraintEnd_toStartOf="@+id/iconHeart"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintDimensionRatio="1:1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Logo" app:layout_constraintHorizontal_chainStyle="packed"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_heart"
            android:id="@+id/iconHeart"
            app:layout_constraintStart_toEndOf="@+id/iconGallery" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/iconBag"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintDimensionRatio="1:1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Logo" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_shopping_bag"
            android:id="@+id/iconBag"
            app:layout_constraintStart_toEndOf="@+id/iconHeart" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Logo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintDimensionRatio="1:1"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="329dp" android:id="@+id/guideline2"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_chicken_layer"
            android:id="@+id/imageChicken" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintDimensionRatio="6:4" android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_cola_layer"
            android:id="@+id/imageView5" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageChicken"
            app:layout_constraintStart_toStartOf="@+id/imageChicken"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" android:layout_marginEnd="32dp"
            app:layout_constraintDimensionRatio="6:4" android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_hamb_layer"
            android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageChicken" app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintDimensionRatio="6:4" android:scaleType="fitXY"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/pic_ice_cream_layer"
            android:id="@+id/imageView7" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="32dp"
            app:layout_constraintDimensionRatio="6:4" android:scaleType="fitXY"/>
    <Button
            android:text="Customize Dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="#FFD21F" android:textColor="#EF3E42"
            android:textSize="24sp" android:fontFamily="sans-serif"
            android:typeface="normal" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>